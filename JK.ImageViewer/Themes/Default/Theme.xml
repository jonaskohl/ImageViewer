<?xml version="1.0" encoding="UTF-8"?>
<Theme
    Format="1"
    ColorMode="System"
>
    <Icons>
        <Icon Key="Command.OpenFile">
            <IfScaling Factor="1">
                <Image Source="images\1x\folder_document.png" />
            </IfScaling>
            <IfScaling Factor="2">
                <Image Source="images\2x\folder_document.png" />
            </IfScaling>
        </Icon>
        <Icon Key="Command.ZoomIn">
            <IfScaling Factor="1">
                <Image Source="images\1x\zoom_in.png" />
            </IfScaling>
            <IfScaling Factor="2">
                <Image Source="images\2x\zoom_in.png" />
            </IfScaling>
        </Icon>
        <Icon Key="Command.ZoomOut">
            <IfScaling Factor="1">
                <Image Source="images\1x\zoom_out.png" />
            </IfScaling>
            <IfScaling Factor="2">
                <Image Source="images\2x\zoom_out.png" />
            </IfScaling>
        </Icon>
        <Icon Key="Command.ZoomOriginal">
            <IfScaling Factor="1">
                <Image Source="images\1x\view_1_1.png" />
            </IfScaling>
            <IfScaling Factor="2">
                <Image Source="images\2x\view_1_1.png" />
            </IfScaling>
        </Icon>
        <Icon Key="Command.FolderImagePrevious">
            <IfScaling Factor="1">
                <Image Source="images\1x\nav_left.png" />
            </IfScaling>
            <IfScaling Factor="2">
                <Image Source="images\2x\nav_left.png" />
            </IfScaling>
        </Icon>
        <Icon Key="Command.FolderImageNext">
            <IfScaling Factor="1">
                <Image Source="images\1x\nav_right.png" />
            </IfScaling>
            <IfScaling Factor="2">
                <Image Source="images\2x\nav_right.png" />
            </IfScaling>
        </Icon>
        <Icon Key="Command.ExitApplication">
            <IfScaling Factor="1">
                <Image Source="images\1x\door_exit.png" />
            </IfScaling>
            <IfScaling Factor="2">
                <Image Source="images\2x\door_exit.png" />
            </IfScaling>
        </Icon>
        <Icon Key="Command.ShowSettings">
            <IfScaling Factor="1">
                <Image Source="images\1x\gearwheel.png" />
            </IfScaling>
            <IfScaling Factor="2">
                <Image Source="images\2x\gearwheel.png" />
            </IfScaling>
        </Icon>
        <Icon Key="SettingsCategory.General">
            <IfScaling Factor="1">
                <Image Source="images\1x\tools.png" />
            </IfScaling>
            <IfScaling Factor="2">
                <Image Source="images\2x\tools.png" />
            </IfScaling>
        </Icon>
        <Icon Key="SettingsCategory.Appearance">
            <IfScaling Factor="1">
                <Image Source="images\1x\eye.png" />
            </IfScaling>
            <IfScaling Factor="2">
                <Image Source="images\2x\eye.png" />
            </IfScaling>
        </Icon>
    </Icons>
    <Colors>
        <WindowBackground>
            <IfColorScheme Which="Light,Dark">
                <SystemColor>Window</SystemColor>
            </IfColorScheme>
        </WindowBackground>
        <WindowForeground>
            <IfColorScheme Which="Light,Dark">
                <SystemColor>WindowText</SystemColor>
            </IfColorScheme>
        </WindowForeground>
    </Colors>
</Theme>
