<?xml version="1.0" encoding="UTF-8"?>
<Theme
    Format="1"
    ColorMode="System"
>
    <Icons>
        <Icon Key="Command.OpenFile">
            <IfColorScheme Which="Light,Dark">
                <Image Source="images\folder_document.png" />
            </IfColorScheme>
        </Icon>
        <Icon Key="Command.ZoomIn">
            <Image Source="images\zoom_in.png" />
        </Icon>
        <Icon Key="Command.ZoomOut">
            <Image Source="images\zoom_out.png" />
        </Icon>
        <Icon Key="Command.ZoomOriginal">
            <Image Source="images\view_1_1.png" />
        </Icon>
        <Icon Key="Command.FolderImagePrevious">
            <Image Source="images\nav_left.png" />
        </Icon>
        <Icon Key="Command.FolderImageNext">
            <Image Source="images\nav_right.png" />
        </Icon>
        <Icon Key="Command.ExitApplication">
            <Image Source="images\door_exit.png" />
        </Icon>
        <Icon Key="Command.ShowSettings">
            <Image Source="images\gearwheel.png" />
        </Icon>
    </Icons>
    <Colors>
        <WindowBackground>
            <IfColorScheme Which="Light,Dark">
                <SystemColor>Window</SystemColor>
            </IfColorScheme>
        </WindowBackground>
        <WindowForeground>
            <IfColorScheme Which="Light,Dark">
                <SystemColor>WindowText</SystemColor>
            </IfColorScheme>
        </WindowForeground>
    </Colors>
</Theme>
